<%- model_class = Friendship -%>
<div class="page-header">
  <h1><%=t '.title', :default => "Incoming requests" %></h1>
</div>





<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:first_name) %></th>
      <th><%= model_class.human_attribute_name(:last_name) %></th>
      <th><%= model_class.human_attribute_name(:birth_date) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>

    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.first_name, user_path(user) %></td>
        <td><%= user.last_name %></td>
        <td><%= user.birth_date %></td>
        <td>
          <%= link_to 'Confirm', friendship_path(user),:method => :put, :class => 'btn' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      friendship_path(user),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
        
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Authorized friends',   friendships_path, :class => 'btn' %>
<%= link_to 'Outgoing requests',  outgoing_requests_path, :class => 'btn' %>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_friendship_path,
            :class => 'btn btn-primary' %>