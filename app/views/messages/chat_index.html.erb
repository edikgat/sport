<%- model_class = Message -%>
<div class="page-header">
  <h1><%= link_to 'Messages/', messages_path %><%=t '.title', :default => @title %></h1>
</div>
<%= will_paginate %>
<% if  @messages[0].sender_id==current_user.id%>
        <% user_id=@messages[0].receiver_id %>
        <% else %>
        <% user_id=@messages[0].sender_id %>
        <% end %>
<table class="table table-striped">
  <thead>
    <tr>
      
      <th><%= model_class.human_attribute_name(:content) %></th>
      <th>Chat with:</th>
      
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @messages.each do |message| %>
      <tr>
      	<% user_id=1 %>
        <% if  message.sender_id==current_user.id%>
        <% user_id=message.receiver_id %>
        <% else %>
        <% user_id=message.sender_id %>
        <% end %>
        <td><%= link_to message.content.html_safe, chat_path(user_id) %></td>
        <td><%= link_to User.find(user_id).email, chat_path(user_id) %></td>
        <td><%=l message.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_message_path(message), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      message_path(message),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate %>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_message_path,
            :class => 'btn btn-primary' %>

