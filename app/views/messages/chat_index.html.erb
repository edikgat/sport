<%- model_class = Message -%>

<div class="page-header">
  <h1><%= link_to 'Messages/', messages_path %><%=t '.title', :default => @title %></h1>
</div>

<%= will_paginate %>


<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:content) %></th>
      <th>Chat with:</th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
    </tr>
  </thead>
<% if @messages.present? %>


  <tbody>
    <% if  @messages[0].sender_id==current_user.id%>
       <% user_id=@messages[0].receiver_id %>
    <% else %>
       <% user_id=@messages[0].sender_id %>
    <% end %>
    <% @messages.each do |message| %>
      <tr>
      	<% user_id=1 %>
        <% if  message.sender_id==current_user.id%>
        <% user_id=message.receiver_id %>
        <% else %>
        <% user_id=message.sender_id %>
        <% end %>
        <td><%= link_to message.content.html_safe, chat_path(user_id) %></td>
        <td><%= link_to User.find(user_id).email, chat_path(user_id) %></td>
        <td><%=l message.created_at %></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>


<%= will_paginate %>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_message_path,
            :class => 'btn btn-primary' %>

