<%- model_class = Message -%>
<div class="page-header">
  <h1><%=t '.title', :default => @title %></h1>
</div>
<%= will_paginate %>

<table class="table table-striped">
  <thead>
    <tr>
      
      <th><%= model_class.human_attribute_name(:content) %></th>
      <th><%= model_class.human_attribute_name(:sender) %></th>
      <th><%= model_class.human_attribute_name(:receiver) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @messages.each do |message| %>
      <tr>
      	
        <td><%= link_to message.content.html_safe, message_path(message) %></td>
        <td><%= User.find(message.sender_id).email %></td>
        <td><%= User.find(message.receiver_id).email %></td>
        <td><%=l message.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_message_path(message), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      message_path(message),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate %>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_message_path,
            :class => 'btn btn-primary' %>
<%= link_to 'Reverse', reverse_messages_path, :class => 'btn' %>
<%= link_to 'Messages', messages_path, :class => 'btn' %>

 
<div class="page-header">
  <h1><%=t '.title', :default => t('helpers.titles.new', :model => model_class.model_name.human,
                                 :default => "New #{model_class.model_name.human}") %></h1>
</div>

<% if @messages[0].sender_id==current_user.id %>
<% receiver=@messages[0].receiver_id %>
<% else %>
<% receiver=@messages[0].sender_id %>
<% end %>

<%= form_for @message, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :content, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :content, :class=>'redactor' %>
    </div>
  </div>
  
  <%= hidden_field_tag(:receiver, receiver) %>
 
  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                messages_path, :class => 'btn' %>
  </div>
<% end %>